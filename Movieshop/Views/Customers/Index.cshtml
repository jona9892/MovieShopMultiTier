@model IEnumerable<MoviesShopProxy.DomainModel.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            First name
        </th>
        <th>
            Last name
        </th>
        <th>
            Adress
        </th>
        <th>
            Email
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Adress.StreetName) @Html.DisplayFor(modelItem => item.Adress.StreetNumber) @Html.DisplayFor(modelItem => item.Adress.Zipcode)  @Html.DisplayFor(modelItem => item.Adress.Country)

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
@if (ViewBag.sortDirection)
{
    @Html.ActionLink("Sort Asc Name", "Index", new { asc = true }, new { @class = "btn btn-default" })
}
else
{
    @Html.ActionLink("Sort Desc Name", "Index", new { asc = false }, new { @class = "btn btn-warning" })
}