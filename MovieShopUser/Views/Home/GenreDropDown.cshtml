@model List<MoviesShopProxy.DomainModel.Genre>

<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
<div class="col-md-3 dropdown pull-left" style="margin-top:8px;">
    <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
        Filter by Genre
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
        <li><a href="@Url.Action("Index","Home")">All Movies</a></li>
        @foreach (var item in Model)
        {
            <li><a href="@Url.Action("Index","Home",new { genreId = item.Id })">@item.Name</a></li>
        }
    </ul>
</div>

<div class="col-md-3 dropdown pull-right">
    <button class="btn btn-default dropdown-toggle" style="margin-top:8px;" type="button" data-toggle="dropdown">
        Shopping Cart<i class="glyphicon glyphicon-shopping-cart"></i>
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
       <li><button class="btn btn-default pull-right" style="margin-right:5px;">Go to Cart</button></li>
    </ul>
</div>

<div class="col-md-6 pull-left">
    <form class="navbar-form" role="search">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search" name="searchString" id="searchString">
            <div class="input-group-btn">
                
                
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                <button class="btn btn-default" value="" type="submit"><i class="glyphicon glyphicon-remove"></i></button>
            </div>
        </div>
    </form>
</div>
</div>