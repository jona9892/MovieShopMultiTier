@model MovieShopUser.Models.ViewModels.CustomerViewModel

@{
    ViewBag.Title = "CustomerEdit";
}

<h2>Customer edit page</h2>

<style>
    h1{color: white}

    body {
        z-index: 1;
        color: black;
        font-size: larger;
        align-content: center;
    }

    .table tr td {
        border-top: 1px solid black !important;
    }

    .background-image {
        position: fixed;
        left: -15px;
        right: 15px;
        z-index: -1;
        display: block;
        background-image: url('http://www.planwallpaper.com/static/images/6790904-free-background-wallpaper.jpg');
        width: 115%;
        height: 130%;
        -webkit-filter: blur(10px);
        -moz-filter: blur(10px);
        -ms-filter: blur(10px);
        filter: blur(10px);
    }

    #tableInfo {
        clear: both;
    }

    .img-responsive {
        transition: 0.4s !important;
        -webkit-box-shadow: 10px 10px 10px rgba(0, 0, 0, 0.5) !important;
        -moz-box-shadow: 10px 10px 10px rgba(0, 0, 0, 0.5) !important;
        box-shadow: 10px 10px 10px rgba(0, 0, 0, 0.5) !important;
    }
</style>

<div class="background-image"></div>
<div class="content">

    <h1>Change your info here</h1>
    <form method="Post" action="~/Home/CustomerEdit" class="col-md-12">
        <input type="hidden" value="@Model.Movie.Id" name="movieId" />
        <input type="hidden" value="@Model.Customer.Id" name="Id" hidden />
        <input type="hidden" value="@Model.Address.Id" name="Id" hidden />
        <div class="form-group">
            <label for="FirstName">First Name</label>
            <input type="text" class="form-control" id="FirstName" name="FirstName" value="@Model.Customer.FirstName">
        </div>
        <div class="form-group">
            <label for="LastName">Last Name</label>
            <input type="text" class="form-control" id="LastName" name="LastName"  value="@Model.Customer.LastName">
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="text" class="form-control" id="Email" name="Email"  value="@Model.Customer.Email">
        </div>


        <div class="form-group">
            <label for="StreetName">Street Name </label>
            <input type="text" class="form-control" id="StreetName" name="StreetName"  value="@Model.Address.StreetName">
        </div>
        <div class="form-group">
            <label for="StreetNumber">Street Number </label>
            <input type="text" class="form-control" id="StreetNumber" name="StreetNumber"  value="@Model.Address.StreetNumber">
        </div>
        <div class="form-group">
            <label for="Zipcode">Zip Code </label>
            <input type="text" class="form-control" id="Zipcode" name="Zipcode"  value="@Model.Address.Zipcode">
        </div>
        <div class="form-group">
            <label for="Country">Country </label>
            <input type="text" class="form-control" id="Country" name="Country"  value="@Model.Address.Country">
        </div>

        <button type="submit" class="btn btn-success"> Save</button>

    </form>



    <div>
        @Html.ActionLink("Back", "Verification", new { movieId = Model.Movie.Id });
    </div>

</div>