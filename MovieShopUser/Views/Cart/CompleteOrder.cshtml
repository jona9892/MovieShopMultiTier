    <h1>Order Completion</h1>

    <div>
        @foreach (var item in Model)
        {
            <h3>You have just purchased: @item.Movie.Title</h3>
        }
        
        
        <div class="col-lg-offset-4 col-md-offset-4 col-sm-offset-4 col-xs-offset-4" >    
        @foreach (var item in Model)
        {
            <p><img class="img-responsive" src="@item.Movie.imageURL" id="moviePoster" /></p>
        }
        </div>

        <table class="table-responsive col-lg-6 col-md-6 col-sm-6 col-xs-6 col-lg-offset-3 col-md-offset-3 col-sm-offset-3 col-xs-offset-3">
            <tr>
                    <td>Price</td>
                    <td>Year</td>
                    <td>Genre</td>
                
            </tr>
            <tr>
                @foreach (var item in Model)
                {
                    <td>@item.Movie.Price</td>
                    <td>@item.Movie.Year</td>
                    <td>@item.Movie.Genre.Name</td>
                }
            </tr>

