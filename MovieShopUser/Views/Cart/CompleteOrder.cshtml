@model List<DomainModel.DomainModel.OrderLine>

@{
    ViewBag.Title = "CompleteOrder";
}

<style>
    #moviePoster {
        position: relative;
        width: 200px;
        height: 300px;
        max-height: 100%;
        max-width: 100%;
        display: block;
        background-size: 100% 100%;
        margin: 10%;
        transition: 0.3s;
        -webkit-box-shadow: 10px 10px 10px rgba(0, 0, 0, 0.5);
        -moz-box-shadow: 10px 10px 10px rgba(0, 0, 0, 0.5);
        box-shadow: 10px 10px 10px rgba(0, 0, 0, 0.5);
    }

        #moviePoster:hover {
            -ms-transform: scale(1.2);
            -webkit-transform: scale(1.2);
            transform: scale(1.2);
        }

    body {
        z-index: 9999;
        text-align: center;
        align-content: center;
    }

    .background-image {
        position: fixed;
        left: -15px;
        right: 15px;
        top: -100px;
        z-index: -1;
        display: block;
        background-image: url('http://www.planwallpaper.com/static/images/6790904-free-background-wallpaper.jpg');
        width: 115%;
        height: 130%;
        -webkit-filter: blur(10px);
        -moz-filter: blur(10px);
        -ms-filter: blur(10px);
        filter: blur(10px);
    }
</style>

<h2>CompleteOrder</h2>

<div class="container-fluid">
    <style>
        #moviePoster {
            position: relative;
            width: 200px;
