@model List<DomainModel.DomainModel.OrderLine>

@{
    ViewBag.Title = "Index";
}

<style>
    #moviePoster {
        position: relative;
        width: 200px;
        height: 300px;
        max-height: 100%;
        max-width: 100%;
        display: block;
        background-size: 100% 100%;
        margin: 10%;
        transition: 0.3s;
        -webkit-box-shadow: 10px 10px 10px rgba(0, 0, 0, 0.5);
        -moz-box-shadow: 10px 10px 10px rgba(0, 0, 0, 0.5);
        box-shadow: 10px 10px 10px rgba(0, 0, 0, 0.5);
    }

        #moviePoster:hover {
            -ms-transform: scale(1.2);
            -webkit-transform: scale(1.2);
            transform: scale(1.2);
        }

    body {
        z-index: 9999;
        text-align: center;
        align-content: center;
    }

    .background-image {
        position: fixed;
        left: -15px;
        right: 15px;
        top: -100px;
        z-index: -1;
        display: block;
        background-image: url('http://www.planwallpaper.com/static/images/6790904-free-background-wallpaper.jpg');
        width: 115%;
        height: 130%;
        -webkit-filter: blur(10px);
        -moz-filter: blur(10px);
        -ms-filter: blur(10px);
        filter: blur(10px);
    }
</style>

    <div class="container" style="margin-top: 20px">
        <div class="panel panel-border">
            <div class="panel-black">Shopping Cart</div>
            <div class="panel-heading"></div>
            <div class="panel-body">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th colspan="1"> </th>
                            <th>Movie</th>
                            <th>Price</th>
                            <th>Quantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@item.Movie.imageURL" width="45" height="67" />
                                </td>
                                <td>@item.Movie.Title</td>
                                <td>@item.Movie.Price </td>
                                <td>@item.Amount</td>
                                @*<td>
                                        @Html.ActionLink("X", "RemoveFromCart", new { id = item.Id })

                                    </td>*@
                            </tr>
                        }


                    </tbody>
                </table>
                @Html.ActionLink("Continue Shopping", "Index", "Home", null, new { @class = "btn btn-primary" })
                @Html.ActionLink("Checkout", "CompleteOrder", "Cart", null, new { @class = "btn btn-success" })
            </div>
        </div>
    </div>